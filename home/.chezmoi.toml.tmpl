{{- $name := promptString "Please enter your git Username" -}}
{{- $email := promptString "Please enter your Git Email" -}}
{{- $signkey := eq $name "Vantesh" -}}
{{- $install_1password:= promptBool "Do you want to install 1Password? y/n" true -}}


[data]
  name = {{ $name | quote }}
  email = {{ $email | quote }}
  signkey = {{ $signkey }}
  install_1password = {{ $install_1password }}

[edit]
  command = "code"
  args    = ["--wait"]

