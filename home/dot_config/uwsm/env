#!/bin/sh
export XDG_MENU_PREFIX=arch-
export XDG_BIN_HOME="$HOME/.local/bin"
export UWSM_APP_UNIT_TYPE=service

# ###### app2unit Integration ######
export APP2UNIT_SLICES='a=app-graphical.slice b=background-graphical.slice s=session-graphical.slice'
export APP2UNIT_TYPE=service

# sdl
export SDL_VIDEODRIVER=wayland

# Electron
export ELECTRON_ARGS="--enable-features=UseOzonePlatform --ozone-platform=wayland"

#cursor
export XCURSOR_SIZE=24
export XCURSOR_THEME=macOS-White

export GDK_BACKEND=wayland,x11
export GDK_SCALE=1
export ELECTRON_OZONE_PLATFORM_HINT=wayland
export CLUTTER_BACKEND=wayland

#QT VARIABLES
export QT_QPA_PLATFORM="wayland;xcb"
export QT_AUTO_SCREEN_SCALE_FACTOR=1
export QT_WAYLAND_DISABLE_WINDOWDECORATION=1
export QT_QPA_PLATFORMTHEME=qt6ct
export QT_QPA_PLATFORMTHEME_QT6=qt6ct

# Firefox
export MOZ_DISABLE_RDD_SANDBOX=1
export EGL_PLATFORM=wayland
export MOZ_ENABLE_WAYLAND=1
export MOZ_DBUS_REMOTE=1

# java
export _JAVA_AWT_WM_NONREPARENTING=1
export NO_AT_BRIDGE=1
export BEMENU_BACKEND=wayland
