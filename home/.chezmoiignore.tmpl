# yazi
.config/yazi/{plugins/**,flavors/**}

# paru
{{- if not (lookPath "paru") }}
.config/paru
{{- end }}

# platform-specific
{{ if eq .chezmoi.os "linux" }}
.chezmoiscripts/windows/**
{{ else if eq .chezmoi.os "windows" }}
.chezmoiscripts/linux/**
.config/{kitty,hypr/**,rofi,matugen,kvantum,paru,clipse,gtk*}
Documents/*
!Documents/*PowerShell/
{{ else }}
.chezmoiscripts/{windows,linux}/**
{{ end }}

# compositor-specific
{{- if eq .compositor "niri" }}
.config/hypr/{hyprland*,variables*}
.config/uwsm/env-hypr*
{{- end }}

{{- if eq .compositor "hyprland" }}
.config/niri/**
{{- end }}

# user-specific
{{- if and .personal (eq .default_shell "fish") }}
.config/zsh
.config/fsh
{{- end }}

{{- if and (not .personal) (eq .default_shell "zsh") }}
.config/fish
{{- end }}
